@{
    ViewData["Title"] = "Home";
}



<div class="home-page-background">
    <div class="content">
        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label id="search-label">Search</label>
                <div id="search-input-group" class="input-group">
                    <input type="text" class="form-control advancedAutoComplete" name="q" id="index-search-input" placeholder="What are you searching for today?" autocomplete="off">
                    <span class="input-group-btn">
                        <button id="index-search-submit" class="btn btn-default" type="submit"><span class="ms-Icon ms-Icon--Search"></span></button>
                    </span>
                </div>
            </div>
        }
    </div>
</div>
<div class="content row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <h5>LEARN MORE</h5>
        <div style="font-size:16px;">
            <a href="https://azure.microsoft.com/en-us/services/search/">Azure Search</a>
        </div>
        <div style="font-size:16px;">
            <a href="https://docs.microsoft.com/en-us/azure/search/cognitive-search-resources-documentation">Cognitive Search</a>
        </div>
        <div style="font-size:16px;">
            <a href="https://azure.microsoft.com/en-us/services/cognitive-services/text-analytics/">Text Analytics</a>
        </div>
        <div style="font-size:16px;">
            <a href="https://azure.microsoft.com/en-us/services/cognitive-services/computer-vision/">Computer Vision</a>
        </div>
    </div>
</div>
